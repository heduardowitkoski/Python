#include <stdio.h>

int main()
{
    float lado1,lado2,lado3;
    printf("Insira um lado: ");
    scanf("%f",&lado1);
    printf("Insira um lado: ");
    scanf("%f",&lado2);
    printf("Insira um lado: ");
    scanf("%f",&lado3);

    if (lado1>=lado2+lado3 || lado2>=lado1+lado3 || lado3>=lado1+lado2)
    {
    printf("Não é um triãngulo");
    }
    else if (lado1==lado2 && lado1==lado3 && lado2==lado3)
    {
    printf("Equilátero");
    }
    else if (lado1==lado2 || lado1==lado3 || lado2==lado3)
    {
    printf("Isósceles");
    }
    else
    {
    printf("Escaleno");
    }

    return 0;
}


