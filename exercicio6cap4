num1=float(input('Insira um número: '))
num2=float(input('Insira um número: '))
opcao=int(input('Escolha uma das opções a seguir:\n1-O primeiro número elevado ao segundo número.\n'
                '2-Raiz quadrada de cada um dos números.\n3-Raiz cúbica de cada um dos números.\n'))
if opcao == 1:
    print(num1**num2)
if opcao == 2:
    print(num1**(1/2),num2**(1/2))
if opcao == 3:
    print(num1**(1/3),num2**(1/3))
else:
    print('Opção inválida.')
